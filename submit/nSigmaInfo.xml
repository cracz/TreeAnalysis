<?xml version="1.0" encoding="utf-8" ?>

<!-- Job parameters -->
<job maxFilesPerProcess="1" filesPerHour="1" fileListSyntax="paths">

  <!-- Task list -->
  <command>
    starver SL20d
    nSigmaInfo $INPUTFILE0 $JOBID config_4p5GeV.txt
  </command>


  <!-- Necessary files -->
  <SandBox installer="ZIP">
    <Package>
      <File>file:/star/u/cracz/work/flow/TreeAnalysis/nSigmaInfo</File>
      <File>file:/star/u/cracz/work/flow/TreeAnalysis/config_4p5GeV.txt</File>
      <File>file:/star/u/cracz/work/flow/TreeAnalysis/libs/</File>
    </Package>
  </SandBox>


  <!-- Get input files from get_file_lis.pl -->
  <input URL="filelist:/star/u/cracz/work/flow/input/tree_fxt_4p5GeV_SL21d_file.list" nFiles="all"/>
  
  <!-- Run log & error messages -->
  <stdout URL="file:/star/data01/pwg/cracz/flowResults_4p5GeV/out/$JOBID.out" />
  <stderr URL="file:/star/data01/pwg/cracz/flowResults_4p5GeV/out/$JOBID.err" />
  <output fromScratch="*.root" toURL="file:/star/data01/pwg/cracz/flowResults_4p5GeV/"/>
  
</job>
